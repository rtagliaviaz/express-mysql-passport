<h4>GASTOS</h4>

<a href="/gastos/add">nuevo registro</a>

<div class="container p-4">
  <div class="row">
    <table class="table">
          <thead class="thead-dark">
            <tr>
              <th>Title</th>
              <th>Category</th>
              <th>Description</th>
              <th>Currency</th>
              <th>Amount</th>
              <th>Date</th>
              <th>Edit</th>
              <th>Delete</th>
            </tr>
          </thead>

          <tbody>
            {{#each outcome}}
              <tr>
                <td>{{title}}</td>
                <td>{{category}}</td>
                <td>{{description}}</td>
                <td>{{currency}}</td>
                <td>{{amount}}</td>
                <td>{{format created_at}}</td>
                <th><a href="/gastos/edit/{{id}}" class="btn btn-secondary">Edit</a></th>
                <th><a href="/gastos/delete/{{id}}" class="btn btn-danger">X</a></th>
              </tr>
            {{/each}}
          </tbody>
    </table>
  </div>
</div>
