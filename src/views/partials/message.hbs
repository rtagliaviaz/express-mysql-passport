  {{#if success}}
  <div class="flash-msg mx-auto">
    <div class="msg alert alert-success alert-dismissible fade show" role='alert'>
      {{success}}
      <button type="button" class="close" data-dismiss="alert" aria-label="close">
        <span aria-hidden="true">&times</span>
      </button>
    </div>
  </div>
  {{/if }}

{{!-- req.flash error --}}
  {{#if error}}
  <div class="flash-msg mx-auto">
    <div class="msg alert alert-danger alert-dismissible fade show" role='alert'>
      {{error}}
      <button type="button" class="close" data-dismiss="alert" aria-label="close">
       <span aria-hidden="true">&times</span>
      </button>
    </div>
  </div>
  {{/if }}